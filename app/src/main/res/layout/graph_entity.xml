<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/round_view_with_stroke"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/entity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/entity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/item_top"
                    android:paddingLeft="@dimen/item_left"
                    android:paddingRight="@dimen/item_right"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="病毒" />
                <ImageView
                    android:id="@+id/entity_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="1dp"
                    android:src="@drawable/ic_hot" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_bottom"
                android:paddingLeft="@dimen/item_left"
                android:paddingRight="@dimen/item_right"
                android:gravity="center_vertical|start"
                android:textColor="@color/grayDark"
                android:textSize="12sp"
                android:text="实体" />
            <TextView
                android:id="@+id/entity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/item_top"
                android:paddingLeft="@dimen/item_left"
                android:paddingRight="@dimen/item_right"
                android:gravity="center_vertical|start"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
        <ImageView
            android:id="@+id/entity_picture"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="@dimen/item_bottom"
            android:layout_marginTop="@dimen/item_top"
            android:layout_marginLeft="@dimen/item_left"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/entity_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />
        <LinearLayout
            android:id="@+id/entity_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/item_top"
                android:paddingBottom="@dimen/item_bottom"
                android:paddingLeft="@dimen/item_left"
                android:gravity="center_vertical|start"
                android:textColor="@color/grayDark"
                android:textSize="14sp"
                android:text="关系" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:paddingLeft="@dimen/item_left"
                android:paddingRight="@dimen/item_right"
                android:paddingBottom="@dimen/item_bottom" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_bottom"
                android:paddingTop="@dimen/item_top"
                android:paddingLeft="@dimen/item_left"
                android:gravity="center_vertical|start"
                android:textColor="@color/grayDark"
                android:textSize="14sp"
                android:text="属性" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>