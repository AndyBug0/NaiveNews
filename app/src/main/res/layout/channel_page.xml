<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary" >
        <ImageView
            android:id="@+id/channel_return_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/my_channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_top"
            android:paddingBottom="@dimen/item_bottom"
            android:paddingLeft="@dimen/item_left"
            android:paddingRight="@dimen/item_right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="我的频道"/>
        <TextView
            android:id="@+id/my_channel_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_top"
            android:paddingBottom="@dimen/item_bottom"
            android:paddingRight="@dimen/item_right"
            android:layout_toRightOf="@+id/my_channel_title"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/channel_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_top"
            android:paddingBottom="@dimen/item_bottom"
            android:paddingRight="@dimen/item_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:gravity="bottom"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="编辑"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>
    <GridLayout
        android:id="@+id/my_channel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:columnCount="4" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/class_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_top"
            android:paddingBottom="@dimen/item_bottom"
            android:paddingLeft="@dimen/item_left"
            android:paddingRight="@dimen/item_right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="可选频道"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_top"
            android:paddingBottom="@dimen/item_bottom"
            android:paddingRight="@dimen/item_right"
            android:layout_toRightOf="@+id/class_title2"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:text="点击加入频道"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>
    <GridLayout
        android:id="@+id/option_channel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:columnCount="4" />
</LinearLayout>