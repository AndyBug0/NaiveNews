<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/scholar_abstract_avatar"
        android:layout_width="120dp"
        android:layout_height="135dp"
        android:scaleType="fitCenter"
        android:layout_margin="5dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/scholar_abstract_avatar"
        android:layout_alignTop="@+id/scholar_abstract_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/scholar_abstract_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal|bottom"
                android:background="@color/transparent"
                android:textColor="@color/darkGreen"
                android:textSize="12sp"
                android:text="H"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal|bottom"
                android:background="@color/transparent"
                android:textColor="@color/darkBlue"
                android:textSize="12sp"
                android:text="A"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal|bottom"
                android:background="@color/transparent"
                android:textColor="@color/dirtYellow"
                android:textSize="12sp"
                android:text="S"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal|bottom"
                android:background="@color/transparent"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp"
                android:text="C"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/scholar_abstract_h_index"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@color/darkGreen"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/scholar_abstract_activity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@color/darkBlue"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/scholar_abstract_star"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@color/dirtYellow"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/scholar_abstract_citations"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_position" />
            <TextView
                android:id="@+id/scholar_abstract_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_margin="2dp"
                android:gravity="center_vertical|start"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_affiliation" />
            <TextView
                android:id="@+id/scholar_abstract_affiliation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_margin="2dp"
                android:gravity="center_vertical|start"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>